<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_slots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:background="#fff"
            android:padding="8dp">

            <TextView
                android:id="@+id/slotId"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Slot number"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="130dp"
                android:layout_height="35dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="219dp"
                android:layout_marginLeft="219dp"
                android:layout_marginEnd="45dp"
                android:layout_marginRight="45dp"
                android:layout_marginBottom="0dp"
                android:text="StartTime"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/book_layot"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="69dp"
                android:background="@drawable/book_button"
                android:text="Book"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="162dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="232dp"
                android:layout_marginLeft="232dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="55dp"
                android:layout_toRightOf="@id/book_layot"
                android:text="Timings"
                android:textColor="#000"
                android:textSize="15dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>